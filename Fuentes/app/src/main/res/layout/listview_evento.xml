<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconoImg"
        android:layout_width="@dimen/layout0"
        android:layout_height="@dimen/layout80"
        android:layout_weight="20"
        android:padding="@dimen/padding10"></ImageView>

    <LinearLayout
        android:layout_width="@dimen/layout0"
        android:layout_height="@dimen/layout80"
        android:layout_weight="80"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fechaListTxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout0"
            android:layout_weight="50"
            android:gravity="center|left"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/letraList"></TextView>

        <TextView
            android:id="@+id/nombreListTxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout0"
            android:layout_weight="50"
            android:gravity="center|left"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/letraList"></TextView>

        <TextView
            android:id="@+id/valorListTxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout0"
            android:layout_weight="50"
            android:gravity="center|left"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/letraList"></TextView>

    </LinearLayout>
</LinearLayout>
